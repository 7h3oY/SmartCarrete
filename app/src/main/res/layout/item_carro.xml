<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Layout horizontal para mostrar el nombre y la cantidad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Vista para mostrar el nombre del producto (alineado a la derecha) -->
        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:textSize="16sp"
            android:textColor="@color/colorVinculos" />

        <!-- Vista para mostrar la cantidad actual del producto (alineado a la izquierda) -->

        <!-- Botón para disminuir la cantidad -->
        <ImageButton
            android:id="@+id/btnDecreaseQuantity"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/menos"
            android:contentDescription="Disminuir cantidad"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:scaleType="fitCenter" />
        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorVinculos"
            android:gravity="end" />


        <!-- Botón para aumentar la cantidad -->
        <ImageButton
            android:id="@+id/btnIncreaseQuantity"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mas"
            android:contentDescription="Aumentar cantidad"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:scaleType="fitCenter" />
        <ImageButton
            android:id="@+id/btnDeleteItem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/borrar"
            android:contentDescription="Aumentar cantidad"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <!-- Layout horizontal para mostrar el precio y el total -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Vista para mostrar el precio del producto -->
        <TextView
            android:id="@+id/txtProductPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/colorVinculos" />

        <!-- Vista para mostrar el total (precio x cantidad) -->
        <TextView
            android:id="@+id/txtTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorVinculos"
            android:layout_gravity="end" />

    </LinearLayout>

</LinearLayout>